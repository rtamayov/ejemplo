<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#62def8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textSize="50sp"
        android:text="This is a popup window."
        android:textAlignment="center"
        android:id="@+id/pw_discover1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textSize="50sp"
        android:text="This is a popup window."
        android:textAlignment="center"
        android:layout_alignLeft="@id/pw_discover1"
        android:id="@+id/pw_discover2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textSize="50sp"
        android:text="This is a popup window."
        android:textAlignment="center"
        android:layout_alignLeft="@id/pw_discover2"
        android:id="@+id/pw_discover3"/>

</RelativeLayout>